{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "influxToken": {
      "type": "string",
      "defaultValue": ""
    },
    "identityKey1": {
      "type": "string",
      "defaultValue": ""
    },
    "authMessage": {
      "type": "string"
    },
    "authHost": {
      "type": "string"
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "ockam-hub",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2018-10-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "containers": [
          {
            "name": "ockam-hub",
            "properties": {
              "image": "ghcr.io/ockam-network/ockam/hub:latest",
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGb": 1.5
                }
              },
              "ports": [
                {
                  "port": 4000
                },
                {
                  "port": 4001
                }
              ],
              "environmentVariables": [
                {
                  "name": "INFLUXDB_HOST",
                  "value": "https://us-west-2-1.aws.cloud2.influxdata.com"
                },
                {
                  "name": "INFLUXDB_PORT",
                  "value": "443"
                },
                {
                  "name": "INFLUXDB_BUCKET",
                  "value": "ockam_hub"
                },
                {
                  "name": "INFLUXDB_ORG",
                  "value": "ockam"
                },
                {
                  "name": "NODE_FQDN",
                  "value": "1.node.ockam.network"
                }
              ],
              "volumeMounts": [
                {
                  "name": "secrets-volume-ockam-vault",
                  "mountPath": "/mnt/secrets/ockam-vault"
                },
                {
                  "name": "secrets-volume-influx",
                  "mountPath": "/mnt/secrets/influx"
                },
                {
                  "name": "secrets-volume-auth",
                  "mountPath": "/mnt/secrets/auth"
                }
              ],
              "livenessProbe": {
                "exec": {
                  "command": [
                    "/opt/ockam_hub/bin/ockam_hub",
                    "pid"
                  ]
                }
              }
            }
          }
        ],
        "osType": "Linux",
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "tcp",
              "port": "4000"
            }
          ],
          "dnsNameLabel": "ockam-hub"
        },
        "volumes": [
          {
            "name": "secrets-volume-ockam-vault",
            "secret": {
              "k1": "[parameters('identityKey1')]"
            }
          },
          {
            "name": "secrets-volume-influx",
            "secret": {
              "token": "[parameters('influxToken')]"
            }
          },
          {
            "name": "secrets-volume-auth",
            "secret": {
              "message": "[parameters('authMessage')]",
              "host": "[parameters('authHost')]"
            }
          }
        ]
      }
    }
  ]
}
